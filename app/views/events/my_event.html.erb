<div class="container">
	<h1>My Event</h1>
	<table class="table">
	  <thead class="thead-inverse">
	    <tr>
	      <th class="col-md-8">Name</th>
	      <th class="col-md-2">Published</th>
	      <th class="col-md-2">Action</th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @events.each do |event| %>
	     	<tr>
				  <td class="col-md-8"><%= event.name %></td>
				  <td class="col-md-2">
				  	
				  	<% if event.published? %>
				    	<%= button_to "unpublish", {:controller => :events,
				    :action => 'unpublish', :id => event.id }, :method => :post, class: "btn btn-danger btn-block" %>
				   	<% else %>
				   		<%= button_to "publish", {:controller => :events,
				    :action => 'publish', :id => event.id }, :method => :post, class: "btn btn-success btn-block" %>
				   	<% end %>
					</td>
					<td class="col-md-2">
				   	<%= button_to "Edit", {:controller => :events,
				    :action => 'edit', :id => event.id }, :method => :get, class: "btn btn-primary btn-block" %>
				   
				    	
				  </td>
				</tr>
	    <% end %>
	  </tbody>
	</table>
</div>