<div class="container">
  <h1>Tickets</h1>
  <div id="ticket-index">
    <%= render 'index' %>
  </div>

  <div id="ticket-new">
    <%= render 'form' %>
  </div>
  
  <div class="row">
    <div class="col-md-3">
      <%= button_to "Complete", my_event_path, :method => :get, class: "btn btn-primary btn-block" %>
    </div>

    <div class="col-md-3">
      <%= button_to "Edit", {:controller => :events,
            :action => 'edit', :id => @event.id }, :method => :get, class: "btn btn-danger btn-block" %>
    </div>
  </div>
</div>